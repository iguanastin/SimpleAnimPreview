<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="animtool.gui.projects.ProjectsController">
    <BorderPane prefHeight="400.0" prefWidth="600.0">
        <center>
            <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label text="AnimTool">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <Separator/>
                <Button mnemonicParsing="false" onAction="#openFolderButtonOnAction" text="Open Folder"/>
                <Label text="Recent:"/>
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true" prefHeight="200.0"
                            prefWidth="200.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <VBox fx:id="recentVBox" spacing="5.0"/>
                </ScrollPane>
            </VBox>
        </center>
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
        </padding>
    </BorderPane>
    <BorderPane pickOnBounds="false">
        <top>
            <BorderPane pickOnBounds="false" BorderPane.alignment="CENTER">
                <left>
                    <Button fx:id="themeButton" mnemonicParsing="false" onAction="#themeButtonOnAction" text="Dark"
                            BorderPane.alignment="CENTER"/>
                </left>
                <right>
                    <Button mnemonicParsing="false" onAction="#exitButtonOnAction" text="X"
                            BorderPane.alignment="CENTER"/>
                </right>
            </BorderPane>
        </top>
        <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
        </padding>
    </BorderPane>
</StackPane>

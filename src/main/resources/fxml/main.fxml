<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import main.DynamicImageView?>

<BorderPane prefHeight="623.0" prefWidth="873.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.MainController">
    <center>
        <DynamicImageView fx:id="previewImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefWidth="200.0" spacing="5.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <Button fx:id="playPauseButton" mnemonicParsing="false" onAction="#playPauseButtonOnAction" text="Play" />
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="5.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#browseButtonOnAction" text="Browse" />
                <Label fx:id="animFolderLabel" prefWidth="286.0" HBox.hgrow="ALWAYS" />
                <ToggleButton fx:id="alwaysOnTopToggleButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#alwaysOnTopToggleOnAction" text="Always On Top" />
                <Label minWidth="-Infinity" text="FPS:" />
                <TextField fx:id="fpsTextField" minWidth="-Infinity" onAction="#fpsTextFieldOnAction" prefHeight="25.0" prefWidth="33.0" text="12" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

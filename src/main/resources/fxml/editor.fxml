<BorderPane fx:id="rootPane" onKeyPressed="#rootPaneOnKeyPressed" onMouseEntered="#rootPaneOnMouseEntered" onMouseExited="#rootPaneOnMouseExited"
            prefHeight="623.0" prefWidth="873.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="animtool.gui.editor.EditorController">
    <center>
        <BorderPane>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <center>
                <DynamicImageView fx:id="previewImageView" pickOnBounds="true" preserveRatio="true"
                                  BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </center>
    <bottom>
        <VBox fx:id="controlsVBox" spacing="5.0">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <Separator prefWidth="200.0"/>
            <HBox alignment="CENTER" spacing="5.0">
                <Button fx:id="leftButton" focusTraversable="false" mnemonicParsing="false"
                        onAction="#leftButtonOnAction" text="&lt;"/>
                <Button fx:id="playButton" focusTraversable="false" mnemonicParsing="false"
                        onAction="#playButtonOnAction" text="Play"/>
                <Button fx:id="rightButton" focusTraversable="false" mnemonicParsing="false"
                        onAction="#rightButtonOnAction" text="&gt;"/>
                <Separator orientation="VERTICAL"/>
                <Label text="FPS:" />
                <TextField fx:id="fpsTextField" prefWidth="50" focusTraversable="false"/>
                <Separator orientation="VERTICAL"/>
                <ToggleButton fx:id="pinButton" focusTraversable="false" mnemonicParsing="false"
                              onAction="#pinButtonOnAction" text="Pin"/>
                <Button fx:id="exportButton" mnemonicParsing="false" onAction="#exportButtonOnAction" text="Export"
                        focusTraversable="false"/>
            </HBox>
            <ListView fx:id="timeLineListView" editable="true" orientation="HORIZONTAL" prefHeight="150.0"/>
        </VBox>
    </bottom>
</BorderPane>
